            android:text="@string/btnAddText"
            android:layout_width="128dp"
            android:layout_height="48dp" android:id="@+id/button1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.149" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <ListView
            android:layout_width="358dp"
            android:layout_height="502dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/listview1"/>
